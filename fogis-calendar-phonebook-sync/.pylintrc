[MESSAGES CONTROL]
disable=
    # Disable redefined-outer-name for test fixtures
    redefined-outer-name,
    # Disable unnecessary-else-return for readability
    no-else-return,
    # Disable unused-argument for test fixtures
    unused-argument,
    # Disable global warnings for this legacy code
    global-variable-not-assigned,
    global-statement,
    global-variable-undefined,
    # Disable unused variable warnings for intentionally unused variables
    unused-variable,
    # Disable undefined variable warnings (legacy code issues)
    undefined-variable,
    # Disable import errors for optional dependencies
    import-error,
    # Disable broad exception catching (common in this codebase)
    broad-exception-caught,
    # Disable logging format warnings (f-strings are fine)
    logging-fstring-interpolation,
    # Disable complexity warnings for legacy code
    too-many-branches,
    too-many-statements,
    too-many-locals,
    too-many-nested-blocks,
    too-many-return-statements,
    too-few-public-methods,
    # Disable docstring warnings for legacy code
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    # Disable unused import warnings (may be used dynamically)
    unused-import,
    # Disable duplicate code warnings (common in tests)
    duplicate-code

[FORMAT]
max-line-length=127
