# FOGIS Configuration - Generated by Ansible
# Deployment timestamp: {{ ansible_date_time.iso8601 }}

metadata:
  version: "2.0"
  created_at: "{{ ansible_date_time.iso8601 }}"
  created_by: "ansible"
  description: "FOGIS portable configuration"

fogis:
  username: "{{ fogis_username }}"
  password: "{{ fogis_password }}"
  referee_number: {{ user_referee_number }}

google:
  oauth:
    client_type: "web_application"
  calendar:
    calendar_id: "primary"
  drive:
    folder_base: "WhatsApp_Group_Assets"

services:
  ports:
    calendar_sync: {{ calendar_sync_port }}
    google_drive: {{ google_drive_port }}
    match_list_processor: 8082
    team_logo_combiner: 8083
    whatsapp_avatar_automation: 8084
    match_list_change_detector: 8085

  configuration:
    log_level: "INFO"
    timezone: "{{ timezone }}"
    locale: "{{ locale }}"

system:
  paths:
    data: "data/"
    logs: "logs/"
    credentials: "credentials/"
    temp: "/tmp"

  monitoring:
    enabled: {{ monitoring_enabled | lower }}
    health_check_interval: 300
    performance_report_interval: 3600

  backup:
    enabled: {{ backup_enabled | lower }}
    schedule: "{{ backup_schedule }}"
    retention_days: {{ backup_retention_days }}
    types: ["complete", "config", "credentials"]

deployment:
  method: "ansible"
  environment: "{{ ansible_environment | default('production') }}"
  deployed_at: "{{ ansible_date_time.iso8601 }}"
  deployed_by: "{{ ansible_user_id }}"
